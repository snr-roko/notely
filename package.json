{
  "name": "notely",
  "version": "1.0.0",
  "description": "A simple note taker with the mern stack",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd notely-backend && node app.js", 
    "client": "cd notely-frontend && npm run dev",
    "build": "cd notely-frontend && npm install && npm run build",
    "start": "cd notely-backend && npm install && node app.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snr-roko/notely.git"
  },
